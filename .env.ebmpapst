# ebmpapst FFU Performance Test Configuration
# ThingsBoard Server Configuration

# REST API Configuration
REST_URL=http://167.99.64.71:8080
REST_USERNAME=tenant@thingsboard.org
REST_PASSWORD=tenant
REST_POOL_SIZE=4

# MQTT Broker Configuration
MQTT_HOST=167.99.64.71
MQTT_PORT=1883

# SSL Configuration (disabled for testing)
MQTT_SSL_ENABLED=false
MQTT_SSL_KEY_STORE=
MQTT_SSL_KEY_STORE_PASSWORD=

# Test API Configuration
# Use 'device' for direct device communication or 'gateway' for gateway mode
TEST_API=device

# Device API Protocol
# Options: MQTT, HTTP, LWM2M
DEVICE_API=MQTT

# Device Configuration
# For 50 ebmpapst FFU devices
DEVICE_START_IDX=0
DEVICE_END_IDX=50
DEVICE_CREATE_ON_START=true
DEVICE_DELETE_ON_COMPLETE=false

# Gateway Configuration (only if TEST_API=gateway)
GATEWAY_START_IDX=0
GATEWAY_END_IDX=5
GATEWAY_CREATE_ON_START=false
GATEWAY_DELETE_ON_COMPLETE=false

# Test Payload Type
# IMPORTANT: Must be set to EBMPAPST_FFU
TEST_PAYLOAD_TYPE=EBMPAPST_FFU

# Test Execution Configuration
WARMUP_ENABLED=true
TEST_ENABLED=true

# Message Rate Configuration
# 50 devices x 1 message every 10 seconds = 5 messages/second
# Adjust based on your test requirements
MESSAGES_PER_SECOND=50
DURATION_IN_SECONDS=300

# Alarm Configuration
# Simulate alarm conditions for testing
ALARMS_PER_SECOND=2
ALARM_STORM_START_SECOND=60
ALARM_STORM_END_SECOND=240

# Rule Chain Configuration
UPDATE_ROOT_RULE_CHAIN=false
REVERT_ROOT_RULE_CHAIN=false
RULE_CHAIN_NAME=root_rule_chain_ce.json

# Test Execution Mode
# true = send data to devices by device ids
# false = select random devices from the list
TEST_SEQUENTIAL=false

# Exit Configuration
EXIT_AFTER_COMPLETE=true
