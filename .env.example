# Environment variables template for ThingsBoard Performance Tests
# Copy to .env and modify values as needed
# Note: This file should be in .gitignore - never commit actual credentials!

# === ThingsBoard Connection ===
REST_URL=http://localhost:8080
REST_USERNAME=tenant@thingsboard.org
REST_PASSWORD=tenant

# === MQTT Connection ===
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_SSL_ENABLED=false

# === Asset Hierarchy (Generated by asset-provision.py) ===
# These are filled in automatically when you run:
# python test-scenarios/asset-provision.py scenarios/cleanroom.json
HIERARCHY_CREATED=false
SITE_ID=
TOTAL_ROOMS=0

# === Room-specific Configuration (Auto-generated) ===
# Example format:
# ROOM_1_ID=asset-id-here
# ROOM_1_NAME=Server Room
# ROOM_1_DEVICE_START=0
# ROOM_1_DEVICE_END=59
# ROOM_1_DEVICE_COUNT=60
# ROOM_1_GATEWAY_COUNT=1

# === Overall Device Configuration ===
TOTAL_DEVICES=0
TOTAL_GATEWAYS=0
DEVICE_START_IDX=0
DEVICE_END_IDX=0
GATEWAY_START_IDX=0
GATEWAY_END_IDX=0

# === Entity Creation Control ===
DEVICE_CREATE_ON_START=true
DEVICE_DELETE_ON_COMPLETE=false
GATEWAY_CREATE_ON_START=true
GATEWAY_DELETE_ON_COMPLETE=false
CUSTOMER_CREATE_ON_START=true
CUSTOMER_DELETE_ON_COMPLETE=false
DASHBOARD_CREATE_ON_START=false
DASHBOARD_DELETE_ON_COMPLETE=false

# === Performance Test Configuration ===
TEST_API=gateway
TEST_PAYLOAD_TYPE=EBMPAPST_FFU
MESSAGES_PER_SECOND=50
DURATION_IN_SECONDS=300
ALARMS_PER_SECOND=0

# === Test Execution Options ===
WARMUP_ENABLED=false
UPDATE_ROOT_RULE_CHAIN=false
REVERT_ROOT_RULE_CHAIN=false
REST_POOL_SIZE=4
REST_CONNECT_SERVER=true

# === Logging ===
LOG_LEVEL=INFO